<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivitySec">

    <Button
        android:id="@+id/buttn"
        android:layout_width="161dp"
        android:layout_height="76dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="38dp"
        android:text="Send"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/textVie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputt"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/IPinputt"
        android:layout_width="341dp"
        android:layout_height="68dp"
        android:ems="10"
        android:hint="IP address"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/inputt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textVie"
        android:layout_width="308dp"
        android:layout_height="127dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="60dp"
        android:text="Received message :"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttn"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/inputt"
        android:layout_width="343dp"
        android:layout_height="157dp"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="message to be sent "
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/buttn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IPinputt"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>